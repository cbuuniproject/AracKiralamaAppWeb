@model IEnumerable<BankAppWeb.Soap.SirketService.Sirket>

@{
    ViewBag.Title = "Tüm Şirketler";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Encode("Şirket Adı")
        </th>
        <th>
            @Html.Encode("Sehir")
        </th>
        <th>
            @Html.Encode("Adres")
        </th>
        <th>
            @Html.Encode("Şirket puanı")
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.sirketAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sehir)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sirketPuani)
            </td>
            <td>
                @Html.ActionLink("Detaylar", "Detaylar", new { id = item.sirketId }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.sirketId }) 
            </td>
        </tr>
    }

</table>
